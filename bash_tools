bwi-start(){
    xhost +local:podman@
    echo "added podman xhost permissions"
    podman-compose up -d
if [ $?=0 ]; then
    echo "Opening shell inside started container..."
    podman exec -ti bwi_system_c bash -l; else
    echo "There were errors starting container.";
fi
}

bwi-stop(){
    podman-compose down
}

bwi-shell() {
    podman exec -ti bwi_system_c bash -l
}

bwi-build() {
    podman-compose --podman-build-args='--format docker' build
}

bwi-ws() {
    if [ $1 == "clear" ]; then \
    export WORKSPACE=; else \
    export WORKSPACE=/root/projects/$1; fi
}

postgres_pw_setup() {
    cat > ~/.pgpass <<EOF
# hostname:port:database:username:password
localhost:*:knowledge_base:postgres:nopass
EOF
    chmod 600 ~/.pgpass
}