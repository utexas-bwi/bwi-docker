bwi-start(){
    xhost +si:localuser:root
    echo "added docker xhost permissions"
    export UID_GID=$(id -u):$(id -g)
    echo "exported uids"
    docker compose up -d
    echo "container started in background"
}

bwi-stop(){
    docker compose down
}

bwi-shell() {
    docker exec -ti bwi_system_c bash -l
}

bwi-build() {
    export UID_GID=$(id -u):$(id -g)
    docker compose build
}

bwi-ws() {
    export WORKSPACE=$1
}
